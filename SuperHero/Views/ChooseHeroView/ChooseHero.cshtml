@model SuperHero.Models.ChooseHeroesViewModel

@{
    ViewBag.Title = "Choose Heroes to Fight!!!";
}

<div id="chooseHero">
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal row justify-content-center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="userHero" class="col-xl-4">
            <div class="form-group text-center" style="color:white;font-size:24px;">
                @Html.LabelFor(model => model.UserHeroList, htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-12 col-sm-6">
                    @Html.DropDownListFor(model => model.UserHeroApiIdList, new SelectList(ViewBag.HeroList, "ApiId", "Name"), "Choose Hero", new { @class = "form-control col-md-10 chooseUserHero" })
                    @Html.ValidationMessageFor(model => model.UserHeroApiIdList, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-xl-10">
                <div id="userHeroCard" class="card">
                    <h4 id="chooseUserHeroCardTitle" class="card-title text-center bg-dark mb-0">
                        <i class='material-icons'>arrow_drop_down</i><span></span>
                    </h4>
                    <img id="chooseUserHeroImg" class="card-img" alt="card image" height="350">
                    <div id="chooseUserHeroCardBody" class="card-body">
                        <p class="card-text">Real-name: <span id="userHeroRealName"></span></p>
                        <hr>
                        <p class="card-text">Intelligence: <span id="userHeroInt"></span></p>
                        <p class="card-text">Strength: <span id="userHeroStr"></span></p>
                        <p class="card-text">Speed: <span id="userHeroSpe"></span></p>
                        <p class="card-text">Durability: <span id="userHeroDur"></span></p>
                        <p class="card-text">Power: <span id="userHeroPow"></span></p>
                        <p class="card-text">Combat: <span id="userHeroCom"></span></p>
                    </div>
                </div>
            </div>
        </div>

        <div id="chooseHeroStart" class="form-group col-xl-4 justify-content-center text-center">
            <div class="mr-auto ml-auto">
                <input id="startButton" type="submit" value="START!!!" class="btn btn-primary" disabled />
            </div>
            <div class="pt-3">
                <h4 style="color:white;">CHOOSE YOUR HERO AND AN ENEMY HERO</h4>
            </div>
        
        
            <div>
                <h4 style="color:white;">OR CHOOSE RANDOM ENEMY TO START</h4>
            </div>
            <div class="mr-auto ml-auto pt-3">
                <input id="randomEnemyButton" type="submit" value="RANDOM" class="btn btn-primary" disabled />
            </div>
        </div>


        <div id="opponentHero" class="col-xl-4">
            <div class="form-group text-center" style="color:white;font-size:24px;">
                @Html.LabelFor(model => model.OpponentHeroList, htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-12 col-sm-6">
                    @Html.DropDownListFor(model => model.OpponentHeroApiIdList, new SelectList(ViewBag.HeroList, "ApiId", "Name"), "Choose Hero", new { @class = "form-control col-md-10 chooseOpponentHero" })
                    @Html.ValidationMessageFor(model => model.OpponentHeroApiIdList, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-xl-10">
                <div id="opponentHeroCard" class="card">
                    <h4 id="chooseOpponentHeroCardTitle" class="card-title text-center bg-dark mb-0">
                        <i class='material-icons'>arrow_drop_down</i><span></span>
                    </h4>
                    <img id="chooseOpponentHeroImg" class="card-img" alt="card image" height="350">
                    <div id="chooseOpponentHeroCardBody" class="card-body">
                        <p class="card-text">Real-name: <span id="opponentHeroRealName"></span></p>
                        <hr>
                        <p class="card-text">Intelligence: <span>?</span></p>
                        <p class="card-text">Strength: <span>?</span></p>
                        <p class="card-text">Speed: <span>?</span></p>
                        <p class="card-text">Durability: <span>?</span></p>
                        <p class="card-text">Power: <span>?</span></p>
                        <p class="card-text">Combat: <span>?</span></p>                        
                    </div>
                </div>
            </div>
        </div>


    </div>
    }
</div>


