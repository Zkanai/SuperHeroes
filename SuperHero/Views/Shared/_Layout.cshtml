<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SuperHero Site, Search SuperHeroes, Battle</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/SuperHero.css">
</head>
@using Microsoft.AspNet.Identity
<body>
    <header id="header" class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-1 pr-1">
                    <li class="pr-2">@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                <ul class="navbar-nav mr-1 pr-1">
                    <li class="pr-2">@Html.ActionLink("Search", "Index", "SearchView")</li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="pr-2">@Html.ActionLink("Battle", "ChooseHero", "ChooseHeroView")</li>
                    </ul>
                }
                <div class="position-relative mr-auto ml-auto">
                    <a class="navbar-brand" href="#">SUPERHEROES</a>
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0 m-0 body-content pb-2">
        @RenderBody()
    </div>
    <footer id="footer" class="container-fluid fixed-bottom">
        <div class="pt-2">
            <h4>&copy; @DateTime.Now.Year - SuperHeroes</h4>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/SuperHero.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
